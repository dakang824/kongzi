.box {
  margin: 20rpx 30rpx;
  box-shadow: 0px 0px 30rpx 0px rgba(153, 153, 153, 0.2);
  border-radius: 20rpx;
  overflow: hidden;
}

.box .content {
  padding: 25rpx 10rpx 20rpx;
  display: flex;
}

.box .content image {
  min-width: 150rpx;
  max-width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.box .content .rt {
  font-size: 26rpx;
  color: #999;
  width: 100%;
  padding: 0 20rpx;
}

.box .content .rt>view {
  margin-bottom: 8rpx;
}

.footer {
  text-align: right;
}

.nodatabox .img {
  text-align: center;
  margin-top: 240rpx;
}

.nodatabox .tip {
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 54rpx;
  margin-top: 49rpx;
}
