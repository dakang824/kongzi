.fixed .tabs {
  background-color: #fff;
}

.fixed .tabs {
  position: fixed !important;
  top: 0px;
  z-index: 1;
  left: 0;
  right: 0;
}

.tabs .line {
  height: 6rpx;
  background: #fa2335;
  width: 50%;
  margin: auto;
  border-radius: 20rpx;
  position: absolute;
  bottom: -3rpx;
  left: 0;
  right: 0;
  transition: all 0.3s;
}

.fixed .tabs {
  background-color: #fa2335;
  border: 0px;
  transition: all 0.3s;
}

.fixed .tabs view {
  color: #fff;
}

.fixed .tabs .line {
  background: #fff;
