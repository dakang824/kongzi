.box {
  margin: 20rpx 30rpx;
  box-shadow: 0px 0px 30rpx 0px rgba(153, 153, 153, 0.2);
  border-radius: 20rpx;
  overflow: hidden;
}

.noData {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  margin-top: 200rpx;
}

.box .content {
  padding: 25rpx 26rpx 20rpx;
  display: flex;
}

.box .content image {
  min-width: 120rpx;
  max-width: 120rpx;
  height: 120rpx;
}

.box .content .rt {
  font-size: 26rpx;
  color: #999;
  margin-left: 25rpx;
}

.box .content .rt>view {
  margin-bottom: 8rpx;
}

.flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
  font-size:24rpx;
}

.footer {
  text-align: right;
}

.c {
  padding: 20rpx 30rpx;
}

.c .txt {
  font-size: 28rpx;
  text-indent: 50rpx;
  color: #999;
  padding: 20rpx 0;
}

.c image {
  min-width: 300rpx;
  max-width: 300rpx;
  height: 300rpx;
  margin: auto;
  display: block;
}

.btn_color {
  background: #4da5fc !important;
  border-color: transparent !important;
}

.b_color {
  background: #f5f5f5 !important;
  border-color: transparent !important;
  color: #ccc !important;
  opacity: 1 !important;
}
