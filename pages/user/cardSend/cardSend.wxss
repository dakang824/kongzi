.flex {
  display: flex;
}

.header {
  margin: 30rpx auto 0;
  width: 690rpx;
  height: 250rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 30rpx 0px rgba(153, 153, 153, 0.2);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.header .top {
  margin: 0 auto;
  width: 650rpx;
  height: 104rpx;
  background: rgba(255, 255, 255, 1);
  border-bottom: 1rpx solid rgba(238, 238, 238, 1);
  align-items: center;
}

.header .top .tip {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(17, 17, 17, 1);
  line-height: 54rpx;
  margin-left: 20rpx;
}

.header .top .img image {
  width: 44rpx;
  height: 44rpx;
}

.header .btm {
  flex: 1;
  align-items: center;
  margin-left: 20rpx;
}

.header .btm .left image {
  width: 80rpx;
  height: 80rpx;
}

.header .btm .right {
  margin-left: 20rpx;
}

.header .btm .right .name {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(17, 17, 17, 1);
}

.header .btm .right .note {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
}
.itembox{
  
  padding: 0 30rpx;
}
.itembox .item{
  width: 690rpx;
  margin: 60rpx  auto 20rpx;
  box-shadow:0px 0px 30rpx 0px rgba(153,153,153,0.3);
  border-radius:20rpx;

}
.title{
  padding: 10rpx 20rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(17,17,17,1);
  line-height:44rpx;
}
.getbtn{
  width:750rpx;
  height:98rpx;
  background:linear-gradient(90deg,rgba(255,90,144,1),rgba(255,44,86,1));
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  line-height: 98rpx;
  text-align: center;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.mask {
  width: 750rpx;
  height: 100vh;
  background: rgba(0, 0, 0, 1);
  opacity: 0.7;
  position: fixed;
  z-index: 10;
  left: 0;
  top: 0;
}
.prizebox{
  width:630rpx;
  height:630rpx;
  background:linear-gradient(55deg,rgba(59,42,209,1),rgba(255,128,219,1));
  box-shadow:0px 34rpx 59rpx 0px rgba(0, 0, 0, 0.26);
  border-radius:30rpx;
  position: fixed;
  z-index: 20;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.prizebox .titlebox{
  width:500rpx;
  height:150rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 10rpx 50rpx 0px rgba(132,44,255,0.5);
  text-align: center;
  margin: 10rpx auto 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:#3B2AD1;
  line-height:50rpx;
  margin-top: 20rpx;
}
.prizebox .row1{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
  margin-top:-60rpx;

}
.prizebox .img{
 text-align: center;
 margin-top: -180rpx;
}
.prizebox .img image{
  width:523rpx;
  height: 443rpx;
}
.prizebox .row2{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:44rpx;
  text-align:center;
  margin-top: 27rpx;
}
.prizebox .row3{
  width:372rpx;
  height:63rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 11rpx 21rpx 0px rgba(0, 0, 0, 0.26);
  border-radius:32rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(45,32,157,1);
  line-height:63rpx;
  text-align: center;
  margin: 37rpx auto 0;
}
.prizebox .close{
  width:30rpx;
  height: 30rpx;
  position: absolute;
  top:30rpx;
  right:47rpx;
}