}

.itemImg {
  position: absolute;
  width: 500rpx;
  height: 100rpx;
  z-index: 5;
  opacity: 1;
  top: 78.5%;
  border: 10rpx solid #fdd780;
}

.itemPrize {
  position: absolute;
  z-index: 100000;
  opacity: 1;
