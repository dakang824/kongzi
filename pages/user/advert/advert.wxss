page {
  background: linear-gradient(to right bottom, #fb8714, #f25b3d, #e10094);
}

.box {
  flex-direction: column;
}

.top {
  width: 100%;
  height: 55vh;
  background: #fa2335;
}

.top .row1 {
  font-size: 80rpx;
  font-family: MF LiHei (Noncommercial);
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  padding-top: 20rpx;
}

.top .row2 {
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  padding-top: 20rpx;
}

.top .row3 {
  justify-content: center;
  align-items: center;
  width: 560rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25px;
  padding: 2rpx 20rpx;
  box-sizing: border-box;
  margin: 20rpx auto 0;
}

.top .row3 .tip {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin-left: 20rpx;
}

.btn {
  height: 45vh;
  background: linear-gradient(to right bottom, #fb8714, #f25b3d, #e10094);
}

.content {
  width: 100%;
  position: absolute;
  top: 100rpx;
  left: 0rpx;
  z-index: 20;
}

.imageContainer {
  width: 100%;
  height: 1100rpx;
}

.item {
  height: 800rpx;
  padding: 30rpx;
  width: 500rpx !important;
}

.itemVideo {
  position: absolute;
  width: 500rpx;
  height: 760rpx;
  z-index: 5;
