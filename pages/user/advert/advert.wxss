  width: 150rpx;
}

.playImg {
  position: absolute;
  z-index: 10;
  width: 126rpx;
  height: 126rpx;
  top: 460rpx;
  left: 225rpx;
}

.coverImg {
  position: absolute;
  width: 500rpx;
  height: 760rpx;
  z-index: 5;
  opacity: 1;
  top: 13%;
  border: 10rpx solid #fdd780;
}

.active {
  opacity: 1;
  z-index: 10;
  height: 890rpx;
  top: 7%;
  transition: all 0.2s ease-in 0s;
}

.active2 {
  opacity: 1;
  z-index: 10;
  top: 82.5%;
  transition: all 0.2s ease-in 0s;
  border: 10rpx solid #fdd780;
}

.active3 {
  opacity: 1;
  z-index: 99999;
  top: 10%;
