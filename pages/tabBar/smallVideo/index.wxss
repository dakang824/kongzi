page {
  background: rgba(0, 0, 0, 0.9);
}

.video-box {
  height: 100vh;
  position: relative;
  background: rgba(0, 0, 0, 0.9);
}

.video-box video {
  border: 0px solid rgba(0, 0, 0, 0.9);
}

.box_view {
  position: absolute;
  left: 0;
  right: 0;
  z-index: 10;
}

.box_view .between {
  margin: 40rpx 0;
  font-size: 25rpx;
  color: #fff;
  justify-content: space-between;
  padding: 0 30rpx;
}

.box_view .between .li {
  border: 1rpx solid #fff;
  padding: 8rpx 30rpx;
  border-radius: 10rpx;
}

.box_view .between .li.active {
  border-color: #fb2235;
  color: #fb2235;
}

.box_view .title {
  color: #fff;
  font-size: 31rpx;
  /* text-align: center; */
  padding-left: 30rpx;
}

.van-cell::after {
  border-bottom: 0 solid transparent !important;
}

.van-field__input {
  background: rgba(255, 255, 255, 0.1) !important;
  height: 60rpx !important;
  line-height: 60rpx !important;
  border-radius: 5rpx;
  text-indent: 20rpx;
}

.bottom {
  height: 108rpx;
  background: rgba(0, 0, 0, 0.6);
  bottom: -1px;
  position: absolute;
  left: 0;
  right: 0;
  z-index: 9;
}

.van-popup--bottom {
  bottom: 108rpx !important;
}

.video-box video {
  width: 750rpx;
  height: 100vh;
  display: block;
}

.noData {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  margin-top: 0;
  background: transparent;
}

.transform-90 {
  transform: rotateX(180deg);
}

.video-top {
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 30rpx;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  z-index: 15;
}

.top-voice {
  width: 100%;
  overflow: hidden;
}

.voice-img {
  display: block;
  float: left;
  width: 45rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.voice-txt {
  color: #fff;
  font-size: 28rpx;
  font-weight: lighter;
  width: 60%;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 2rpx;
}

.voice-search {
  /* position: fixed;
  top: 30rpx;
  right: 30rpx; */
  display: block;
  float: right;
  width: 42rpx;
  height: 42rpx;
}

.top-nav {
  /* position: fixed;
  top: 70rpx;
  left: 50%;
  transform: translate(-50%); */
  overflow: hidden;
  margin-top: 50rpx;
  text-align: center;
}

.top-nav cover-view {
  color: rgba(255, 255, 255, 0.5);
  font-size: 28rpx;
  display: inline-block;
  margin-right: 20rpx;
  padding: 20rpx;
  position: relative;
}

.top-nav cover-view:last-child {
  margin-right: 0;
}

