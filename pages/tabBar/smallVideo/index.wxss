.cover-pause {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  /* background: rgba(0, 0, 0, 0.1); */
  z-index: 1;
  text-align: center;
  line-height: calc(100vh - 102rpx);
}

.cover-play {
  background: rgba(0, 0, 0, 0);
}

.right-list {
  position: absolute;
  right: 10rpx;
  bottom: 202rpx;
  overflow: hidden;
  z-index: 155;
}

.headImg {
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  margin-right: 30rpx;
}

button.list-icon {
  background: transparent;
  line-height: inherit;
}

.van-button__icon {
  display: flex;
  align-items: center;
}

.list-icon image {
  width: 50rpx;
  height: 50rpx;
}

.list-icon>view {
  padding: 5rpx 0 10rpx;
}

.list-icon .txt {
  display: block;
  padding: 5rpx 0 10rpx;
}

.list-icon {
  overflow: hidden;
  margin-bottom: 30rpx;
  text-align: center;
  position: relative;
  z-index: 15;
  color: #fff;
  font-size: 25rpx;
}

.right-list .list-icon:last-child {
  margin-bottom: 0;
}

.list-icon cover-image {
  display: block;
  width: 72rpx;
  height: 62rpx;
  margin: 0 auto 6rpx;
}

.list-icon cover-view {
  color: #fff;
  font-size: 24rpx;
}

.footer {
  background: #000;
}

.progress {
  position: relative;
  top: 0rpx;
  right: 0;
  left: 0;
  width: 100%;
}

.scroll-view_inner {
  margin: 30rpx;
  height: 850rpx;
  width: auto;
}

.van-cell {
  background: rgba(0, 0, 0, 0.6) !important;
  /* background: transparent!important; */
  height: 105rpx;
}

button.margin-left {
  margin-left: 25rpx;
  height: 60rpx !important;
  line-height: 60rpx;
  padding-left: 0rpx;
  width: auto !important;
  font-size: 24rpx;
}

.textarea.transition .van-cell {
  background: #fff !important;
  border-radius: 50rpx 50rpx 0 0;
}

.textarea.transition {
  transition: all 0.5s ease-in;
  background: #fff !important;
  border-radius: 50rpx 50rpx 0 0;
}

.textarea {
  height: 102rpx;
  color: #fff;
  line-height: 102rpx;
  font-size: 27rpx;
  text-indent: 20rpx;
  position: fixed;
  bottom: 108rpx;
  right: 0;
  left: 0;
  z-index: 999;
}

.head {
  font-size: 30rpx;
  padding: 35rpx 30rpx;
  border-bottom: 2rpx solid #fff;
  color: #fff;
}

.user_speak image {
  min-width: 52rpx;
  max-width: 52rpx;
  height: 52rpx;
  background: #210b1d;
  border: 1rpx solid #fff;
  border-radius: 50%;
  margin-right: 25rpx;
}

.block {
  margin-bottom: 30rpx;
}

.user_speak .name {
  font-size: 30rpx;
  margin-bottom: 25rpx;
}

.user_speak .info {
  font-size: 27rpx;
  margin-bottom: 25rpx;
}

.user_speak .right {
  width: 90%;
  color: #fff;
}

.loading {
  text-align: center;
}

.user_speak .time {
  font-size: 24rpx;
  text-align: right;
  padding-right: 15rpx;
}

.left-info {
  width: 60%;
  position: absolute;
  left: 30rpx;
  bottom: 130rpx;
  overflow: hidden;
  z-index: 15;
  font-size: 32rpx;
}

.info-name {
  color: #fff;
  font-size: 30rpx;
  margin-right: 40rpx;
}

.transparent {
  background: transparent !important;
  display: flex !important;
  align-items: center;
  justify-content: center;
}

.info-detail {
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  padding-top: 25rpx;
  min-height: 77rpx;
}

