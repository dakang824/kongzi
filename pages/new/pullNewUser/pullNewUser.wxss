@import "/pages/new/getTicket/getTicket.wxss";

page {
  background: linear-gradient(to right bottom, #fb8714, #f25b3d, #e10094);
}

.img {
  margin-top: 0;
}

.noData {
  margin-top: 60rpx;
}

.pic>view {
  position: relative;
}

.pic .tip {
  position: absolute;
  color: #fff;
  font-size: 18rpx;
  bottom:8rpx;
  left: 0;
  right: 0;
  width: 60rpx;
  height: 24rpx;
  background: rgba(255, 44, 86, 1);
  border-radius: 12px;
  margin:auto;
  line-height:24rpx;
}

.pic .green {
  color: #fff;
  position: absolute;
  font-size: 18rpx;
  bottom:8rpx;
  left: 0;
  right: 0;
  width: 60rpx;
  height: 24rpx;
  background: #CCCCCC;
  border-radius: 12px;
  margin:auto;
  line-height:24rpx;
}

.mask {
  width: 750rpx;
  height: 100vh;
  background: rgba(0, 0, 0, 1);
  opacity: 0.7;
  position: fixed;
  z-index: 30;
  left: 0;
  top: 0;
}

.award {
  width: 650rpx;
  height: 534rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  position: fixed;
  z-index: 30;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.award .img {
  text-align: center;
  margin-top: -110rpx;
}

.award .row1 {
  text-align: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  line-height: 57rpx;
}

.award .row2 {
  width: 497rpx;
  height: 82rpx;
  background: linear-gradient(90deg, rgba(255, 90, 144, 1), rgba(255, 44, 86, 1));
  border-radius: 41rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(254, 254, 254, 1);
  line-height: 82rpx;
  text-align: center;
  margin: 56rpx auto 0;
}

.award .close {
  width: 29rpx;
  height: 29rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.bg_pic {
  width: 100vw;
  vertical-align: bottom;
}

.timebox {
  position: absolute;
  z-index: 15;
  width: 560rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 20rpx 0px rgba(153, 153, 153, 0.2);
  border-radius: 10rpx;
  /* top: 350rpx; */
  top: -34rpx;
  left: 50%;
  transform: translate(-50%, 0);
  align-items: center;
  justify-content: center;
}

.timebox .tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(17, 17, 17, 1);
}

.timebox .time {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(-57deg, rgba(251, 39, 79, 1), rgba(255, 156, 0, 1));
  box-shadow: 0px 1px 7rpx 0px rgba(247, 244, 244, 0.2);
  border-radius: 6rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
  text-align: center;
}

.timebox .day {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(17, 17, 17, 1);
  margin: 0 10rpx;
}

.itembox {
  width: 690rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  padding-bottom: 60rpx;
  box-sizing: border-box;
  margin: auto;
  margin-top: -45rpx;
}

.itembox .rule {
  margin: 0 auto;
  width: 630rpx;
  height: 180rpx;
  background: rgba(253, 254, 235, 1);
  border-radius: 20rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.itembox .rule .top {
  align-items: center;
  justify-content: center;
}

.itembox .rule .top .word {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin: 0 17rpx;
}

.itembox .rule .top .line {
  width: 50rpx;
  height: 1px;
  background: rgba(102, 102, 102, 1);
}

.itembox .rule .btm {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.itembox .rule .btm text {
  font-weight: bold;
  font-size: 38rpx;
  margin: 0 10rpx;
}

.itembox .invitation {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  text-align: center;
  margin-top: 50rpx;
}

.itembox .invitation text {
  font-size: 34rpx;
  color: #ef4850;
  margin: 0 10rpx;
  font-weight: bolder;
}

.itembox .manbox {
  width: 590rpx;
  margin: 30rpx auto 0;
  display: flex;
  flex-wrap: wrap;
}

.itembox .manbox .man {
  margin-right: 37rpx;
  width: 88rpx;
  text-align: center;
}

.itembox .manbox .man:nth-child(5n) {
  margin-right: 0;
}

.itembox .manbox .man .pic {
  margin-top: 20rpx;
}

.itembox .manbox .man .pic .headportrait {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #eee;
}

.itembox .manbox .man .pic .name {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  width: 88rpx;
}

.itembox .sharebox {
  flex-direction: column;
  align-items: center;
  margin-top: 68rpx;
}

.sharebox .left {
  width: 330rpx;
  height: 82rpx;
  background: linear-gradient(90deg, rgba(255, 90, 144, 1), rgba(255, 44, 86, 1));
  border-radius: 41rpx;
  line-height: 82rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(254, 254, 254, 1);
}

.getaward {
  width: 500rpx;
  height: 82rpx;
  background: linear-gradient(90deg, rgba(255, 90, 144, 1), rgba(255, 44, 86, 1));
  border-radius: 41rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(254, 254, 254, 1);
  line-height: 82rpx;
  text-align: center;
  margin-top: 68rpx;
}

.van-count-down {
  display: flex !important;
}

.box {
  position: relative;
  background: linear-gradient(to right bottom, #fb8714, #f25b3d, #e10094);
  padding-bottom: 75rpx;
}

.gray {
  background: #eee;
}
