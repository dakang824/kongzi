.direct .img {
  width: 100%;
}

.box {
  width: 100%;
  border-radius: 30rpx 30rpx 0 0;
  background: #fff;
  text-align: center;
  position: absolute;
  top: 247rpx;
}

form {
  width: 100%;
  display: block;
  text-align: center;
}

.box .title {
  font-size: 44rpx;
  color: #333;
  font-weight: bold;
  padding-top: 100rpx;
}

.box .title image {
  width: 36rpx;
  height: 38rpx;
  vertical-align: middle;
}

.box .goods {
  font-size: 32rpx;
  margin-top: 49rpx;
}

.good_img {
  width: 690rpx;
  height: 300rpx;
  border-radius: 20px;
  margin-top: 80rpx;
}

.box .btn {
  text-align: center;
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(90deg, rgba(255, 90, 144, 1), rgba(255, 44, 86, 1));
  border-radius: 40rpx;
  margin: 182rpx auto 60rpx;
  color: #fff;
  font-size: 32rpx;
}

.box_layer {
  background-color: transparent !important;
  position: relative;
  top: -50rpx;
}

.box_layer .img {
  width: 739rpx;
  height: 865rpx;
}

.box_layer .content_txt {
  position: absolute;
  top: 384rpx;
  left: 0;
  right: 0;
  margin: auto;
  text-align: center;
}

.box_layer .color1 {
  font-size: 45rpx;
  color: rgba(0, 0, 0, 1);
  background: linear-gradient(0deg, rgba(249, 151, 36, 1) 0%, rgba(248, 191, 81, 1) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.box_layer .color2 {
  font-size: 36rpx;
  color: #fff;
  margin: 70rpx 0 64rpx;
}

.box_layer .color3 {
  color: #ff9211;
  font-size: 28rpx;
  width: 400rpx;
  margin: 0 auto 35rpx;
}

.box_layer .color4 {
  color: #ff9211;
  font-size: 28rpx;
  width: 400rpx;
  margin: 45rpx auto;
}

.box_layer .color5 {
  color: #fff;
  font-size: 28rpx;
  width: 400rpx;
  margin: 65rpx auto 70rpx;
}

.box_layer navigator {
  width: 100%;
}

.box_layer .btn {
  width: 350rpx;
  height: 72rpx;
  background: linear-gradient(90deg, rgba(255, 208, 117, 1), rgba(249, 152, 37, 1));
  border: 1px solid rgba(255, 206, 100, 1);
  box-shadow: 0px 1px 5px 0px rgba(255, 178, 90, 0.3);
  border-radius: 36rpx;
  line-height: 72rpx;
}

.marleft {
  margin-left: 26rpx;
}


.layer {
  text-align: center;
  width: 630rpx;
}

.layer button {
  background: #fff;
  border-radius: 0;
  border-color: transparent;
  border-top: 1px solid #f3f3f3;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  color: #4da5fc;
}

.layer .title {
  padding: 30rpx 0;
  font-size: 34rpx;
}

.layer .txt {
  font-size: 28rpx;
  padding: 30rpx 0 60rpx;
  color: #999;
}