@import "/pages/new/historyPrize/historyPrize";
@import "/pages/new/luckyDetail/luckyDetail";
.page .box .img {
  min-width: 200rpx;
  height: 200rpx;
  border: 1px solid rgba(238, 238, 238, 1);
  border-radius: 10rpx;
  overflow: hidden;
}

.page .box .flex {
  align-items: inherit;
}

.gray {
  margin-bottom: 15rpx;
}

.page .box {
  box-shadow: inherit;
  margin-top: 0;
  padding: 25rpx 0 0 0;
  width: 690rpx;
}
.prizebox{
  position: relative;
}
.prizebox .row1{
  font-size:44rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(17,17,17,1);
  line-height:50rpx;
  margin-left: 72rpx;
  height: 160rpx;
  line-height: 160rpx;
}
.prizebox .line{
  width:690rpx;
  height:2rpx;
  background:rgba(238,238,238,1);
  margin: 0 auto;
}
.prizebox .step{
 
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(17,17,17,1);
  /* line-height:50rpx; */
  margin-left: 73rpx;
  margin-top: 35rpx;
}
.prizebox .row2{
  width:630rpx;
  height:570rpx;
  border-radius:20rpx;
  box-shadow:0px 0px 50rpx 0px rgba(153, 153, 153, 0.2);
  margin: 60rpx auto 0;
  position: relative;
  z-index: 100 !important;
}
.prizebox .row2 .between{
  padding: 30rpx;
}
.prizebox .coupon{
  width:500rpx;
  margin: 30rpx auto 0;
  position: relative;
  z-index: 10;
}
.prizebox .coupon .vCenter{
  font-size: 25rpx;
}
.prizebox .coupon .vCenter .img{
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  text-align:center;
  line-height:37rpx;
  margin-right:20rpx;
}
.newbox{
  width:180rpx;
  height: 180rpx;
}
.hand{
  width:108rpx;
  height:132rpx;
  position: absolute;
  top:17rpx;
  right:23rpx;
}
.circle1{
  width:200rpx;
  height:200rpx;
  background:linear-gradient(-30deg,rgba(254,54,54,1) 0%,rgba(255,255,255,1) 100%);
  opacity:0.1;
  border-radius:50%;
  position: absolute;
  top:-70rpx;
  left:-50rpx;
}
.circle2{
  width:260rpx;
  height:260rpx;
  background:linear-gradient(-30deg,rgba(156,96,254,1) 0%,rgba(255,255,255,1) 100%);
  opacity:0.1;
  border-radius:50%;
  position: absolute;
  top:480rpx;
  left:450rpx;
  z-index: 50 !important;
}