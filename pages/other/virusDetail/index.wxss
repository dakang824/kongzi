.head {
  position: relative;
}

.head .img {
  height: 299rpx;
  width: 100%;
}

.head .virus {
  position: absolute;
  top: 205rpx;
  left: 0;
  right: 0;
  margin: auto;
}

.boxShadow {
  box-shadow: 0px -18px 40px 0px rgba(0, 0, 0, 0.15);
}

.box {
  margin-top: 300rpx;
}

.box van-icon {
  display: flex;
  justify-items: center;
}

.box .block {
  margin-bottom: 70rpx;
}

.box .icon {
  margin-right: 12rpx;
}

.box .from {
  padding: 0 30rpx;
  color: #919191;
  font-size: 24rpx;
}

.run {
  width: 750rpx;
  /* height: 550rpx; */
  position: relative;
}
.run image{
  width: 100%;
}

.run .tex {
  position: absolute;
  font-size: 12px;
  left: 35rpx;
  top: 26rpx;
  color: #555;
}

ff-canvas {
  width: 100%;
  height: 100%;
}

.block .title {
  padding: 0 30rpx 20rpx;
}

.block .title .t {
  background: #fa2335;
  width: 14rpx;
  height: 25rpx;
  border-radius: 7rpx;
  display: block;
  margin-right: 20rpx;
}

.block .title .txt {
  color: #555;
  font-size: 30rpx;
}
.block .row{
  padding: 15px 0;
}
.van-collapse .van-collapse-item__content{
  padding: 0 15px;
}
.block .row>view {
  color: #2a2a2b;
  font-size: 30rpx;
  flex: 0.25;
  text-align: center;
}

.block .row>view:first-child {
  color: #fa2335;
  font-weight: bold;
  font-size: 30rpx;
}

.block .row.header {
  font-weight: bold;
  padding: 15px;
  text-align: center;
  margin-top: 30rpx;
}

.block .row.header view {
  flex: 0.25;
  text-align: center;
}
