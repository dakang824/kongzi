page{
  padding-bottom: 108rpx;
}
.van-tab--active {
  color: #ff2c56 !important;
}

.van-tabs__line {
  width: 30rpx !important;
  left: 4% !important;
}

.van-tabs--line {
  padding-top: 81rpx !important;
}
.van-cell__title{
  min-width: 480rpx;
}
.box {
  min-height: calc(100vh - 116rpx);
  background: #f8f8f8;
  padding: 30rpx 30rpx 0 30rpx;
  overflow: auto;
}

.btn {
  margin-left: 30rpx;
  border-color: #ff2c56 !important;
  color: #fff !important;
  background: linear-gradient(90deg, rgba(255, 90, 144, 1), rgba(255, 44, 86, 1)) !important;
}

.btnActive {
  color: #ff2c56 !important;
  background: transparent !important;
  padding: 0 25rpx !important;
}

.box .li .footer {
  display: flex;
  padding-bottom: 30rpx;
  justify-content: flex-end;
}

.box .li .type {
  background: #ffe9ee;
  color: #ff2c56;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  margin-right: 13rpx;
  font-size: 22rpx;
}

.box .li {
  background: #fff;
  box-shadow: 0px 0px 30rpx 0px rgba(153, 153, 153, 0.2);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.box .li .head {
  padding: 25rpx 0;
  font-size: 24rpx;
  color: #111;
}

.box .li .money {
  color: #999;
}

.box .li .age {
  font-size: 20rpx;
  color: #999;
  background: #f8f8f8;
  padding: 4rpx 13rpx;
  border-radius: 5px;
  margin-right: 20rpx;
}

.box .li .t {
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}

.box .li .t .time {
  color: #999;
  font-size: 22rpx;
}

.box .li .t .total {
  color: #333;
  font-size: 22rpx;
}

.box .li .t .total text {
  font-size: 28rpx;
  font-weight: bold;
}

.box .li .head text {
  color: #ff2c56;
}

.box .li .m {
  padding: 24rpx 0 35rpx 0;
  font-size: 24rpx;
  color: #333;
}

.box .li .m .rt {
  width: 100%;
}
.layer{
  text-align: center;
  padding: 30rpx;
  font-size: 24rpx;
  color: #999;
}
button {
  padding: 0;
  margin: 0;
  background: transparent;
  line-height: 0;
}

.box .li .m image {
  width: 100rpx;
  height: 100rpx;
  min-width: 100rpx;
  border: 1px solid #eee;
  border-radius: 5px;
  margin-right: 23rpx;
}

.box .li .m .tit {
  font-size: 32rpx;
  font-weight: bold;
  width: 329rpx;
}

.box .li .m .row {
  margin-bottom: 30rpx;
  align-items: inherit;
}

.box .li .red {
  color: #ff2c56;
}
.topmar{
  padding: 100rpx 50rpx 0;
  font-size: 28rpx;
}
.inner{
  max-height:calc(100vh - 200rpx);
}