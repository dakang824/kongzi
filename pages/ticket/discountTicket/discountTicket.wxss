.flex {
  display: flex;
}

.header1 {
  width: 750rpx;
  height: 342rpx;
  position: relative;
}

navigator.txt {
  margin-left: -10rpx;
}

.txt {
  font-size: 26rpx;
  margin-top: 20rpx;
  color: #63b1fe;
}

.header1 .cardbg {
  width: 100%;
  height: 100%;
}

.header1 .cardinfo {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translate(-50%, 0);
}

.header1 .cardinfo .smallman {
  position: absolute;
  top: 38rpx;
  left: 39rpx;
}

.header1 .cardinfo .money {
  position: absolute;
  left: 38rpx;
  bottom: 60rpx;
}

.box {
  margin-top: 128rpx;
  padding: 30rpx;
}

.box .title {
  font-size: 40rpx;
  font-weight: bold;
}

.box .info .tit {
  font-size: 32rpx;
  font-weight: bold;
  margin: 70rpx 0 40rpx;
}

.box .info text {
  font-size: 26rpx;
  line-height: 50rpx;
}

.button {
  width: 500rpx;
  height: 98rpx;
  background: linear-gradient(90deg, rgba(244, 229, 191, 1) 0%, rgba(222, 192, 124, 1) 100%);
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.lianxi {
  width: 250rpx;
  height: 98rpx;
  background: #dec07c;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.submit {
  position: fixed;
  bottom: 0rpx;
  left: 0;
  /* transform: translate(-50%,0); */
  display: flex;
}

/* .box .submit {
  text-align: center;
  margin: 189rpx 0 0;
} */

.layer .tit {
  text-align: center;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.layer .row {
  padding: 20rpx 30rpx;
  font-size: 14px;
}

.layer .money {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(255, 44, 86, 1);
  line-height: 44rpx;
}

.layer .btns van-button {
  margin-left: 20rpx;
}

.layer .pay {
  padding: 30rpx;
}

.layer .pay .vCenter {
  font-size: 14px;
}

.layer_btn {
  width: 200rpx;
  height: 75rpx !important;
  line-height: 75rpx !important;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(255, 44, 86, 1);
  background: linear-gradient(90deg, rgba(255, 90, 144, 1), rgba(255, 44, 86, 1));
  border-color: #ff2c56 !important;
}

.cancel {
  color: #ff2c56 !important;
  background: transparent !important;
}

.head {
  position: absolute;
  top: 38rpx;
  left: 38rpx;
  display: flex;
  align-items: center;
}

.head image {
  margin-right: 10rpx;
}

.valid_days {
  font-size: 24rpx;
}
