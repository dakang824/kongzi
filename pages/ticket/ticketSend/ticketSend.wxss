.flex{
    display: flex;
}
.header{
    margin:30rpx auto 0;
    width:690rpx;
    height:250rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 30rpx 0px rgba(153,153,153,0.2);
    border-radius:20rpx;
    display: flex;
    flex-direction: column;
}
.header .top{
    margin: 0 auto;
    width:650rpx;
    height:104rpx;
    background:rgba(255,255,255,1);
    border-bottom:1rpx solid rgba(238,238,238,1);
    align-items: center;
}
.header .top .tip{
    font-size:24rpx;
    font-weight:500;
    color:rgba(17,17,17,1);
    line-height:54rpx;
    margin-left:20rpx;
}
.header .top .img image{
    width:44rpx;
    height: 44rpx;
}
.header .btm{
    flex:1;
    align-items: center;
    margin-left: 20rpx;
}
.header .btm .left image{
    width:80rpx;
    height: 80rpx;
    border-radius: 50px;
}
.header .btm .right{
    margin-left: 20rpx;
}
.header .btm .right .name{
    font-size:28rpx;
    font-weight:bold;
    color:rgba(17,17,17,1);
}
.header .btm .right .note{
    font-size:24rpx;
    color:rgba(153,153,153,1);
}
.detailbox{
    margin-bottom: 130rpx;
}
.detailbox .itembox{
    width:690rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 30px 0px rgba(153,153,153,0.2);
    border-radius:20px;
    margin: 30rpx auto 0;
    padding: 30rpx 20rpx 35rpx 20rpx;
    box-sizing: border-box;
}
.detailbox .itembox .top{
    height: 100rpx;
}
.detailbox .itembox .top .titlebox{
    height: 100%;
    /* padding: 12rpx; */
    margin-left: 29rpx;
}
.detailbox .itembox .top .titlebox .title{
    font-size:28rpx;
    font-weight:bold;
    color:rgba(17,17,17,1);
}
.detailbox .itembox .top .titlebox .agebox{
    margin-top:29rpx;
}
.detailbox .itembox .top .titlebox .agebox .old{
    width:100rpx;
    height:32rpx;
    background:rgba(248,248,248,1);
    border-radius:8rpx;
    text-align: center;
    font-size:20rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
    line-height:32rpx;
    margin-left:20rpx;
}
.detailbox .itembox .top .titlebox .agebox .old:nth-of-type(1){
    margin-left: 0;
}
.detailbox .itembox .mid{
    margin-top:50rpx;
    margin-left: 120rpx;
}
.detailbox .itembox .mid .value{
    font-size:26rpx;
    color:#666666;
    margin-top:6rpx;
}
/* .detailbox .itembox .btm{
    text-align: center;
    margin-top:30rpx;
} */

.detailbox .itembox .itembtn{
    margin-top:50rpx;
    position: relative;
}
.logo{
    width:630rpx;
    height:120rpx;
    background:rgba(248,248,248,1);
    border-radius:10rpx;
    align-items: center;

}
.logo .logoimg{
    width:80rpx;
    height:80rpx;
    background:rgba(231,202,255,1);
    border:1px solid rgba(238,238,238,1);
    border-radius:10rpx;
    justify-content: center;
    align-items: center;
    margin-left: 20rpx;
}
.logo .company{
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:bold;
    color:rgba(17,17,17,1);
    line-height:58rpx;
    margin-left:29rpx;
}
.logo .seedetail{
    width:160rpx;
    height:40rpx;
    background:rgba(255,233,238,1);
    border-radius:20rpx;
    font-size:20rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(255,44,86,1);
    line-height:40rpx;
    text-align: center;
    position: absolute;
    right:20rpx;
    top:40rpx;
    margin-right:20rpx;
}
.address{
    margin-top:40rpx;
}
.address .title{
    font-size:28rpx;
    font-family:PingFang SC;
    font-weight:bold;
    color:rgba(51,51,51,1);
    line-height:40rpx;
}
.address .namebox .row{
    justify-content: space-between;
    margin-top:35rpx;
}
.address .namebox .row .name{
    font-family: PingFang-SC-Bold;
    color:#333;
    font-size: 28rpx;
    font-weight: bold;
}
.address .namebox .row .distance{
    font-size:28rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:40rpx;
    margin-right: 19rpx;
}
.addressdetail{
    font-family: PingFang-SC-Regular;
    color:#333;
    font-size: 28rpx;
}
.sendbtn{
    position: fixed;
    bottom: 0rpx;
    left: 0;
    height:98rpx;
    background:linear-gradient(90deg,rgba(255,90,144,1),rgba(255,44,86,1));
    width: 100%;
    text-align: center;
    line-height: 98rpx;
    font-size:32rpx;
    font-weight:500;
    color:rgba(255,255,255,1);
}
