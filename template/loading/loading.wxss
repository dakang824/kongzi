.loading_box {
  width: 100%;
  height: 3px;
  transition: all 200ms linear;
}

.loading_big {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999999999;
  background: #ff9b57;
}

.loading_small {
  background: #fff;
}

.loading_hide {
  opacity: 0;
  height: 0;
}

.showlayer{
  height: 100vh;
  width: 100%;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: transparent;
  display: block;
  z-index: 9999999;
}
.hiddenlayer{
  height: 0;
  display: none;
}