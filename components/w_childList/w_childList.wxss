.flex{
  display: flex;
  justify-content: space-between;
}
.itembox{
  flex-wrap: wrap;
  box-sizing: border-box;
}
.itembox .item{
  margin-top: 30rpx;
  width:330rpx;
  border-radius:15rpx;
  overflow: hidden;
  box-shadow: 0px 0px 30rpx 0px rgba(153, 153, 153, 0.2);
}
.opacity{
  opacity:0.5
}
.itembox .item .img{
  width:330rpx;
  height:330rpx;
  background:rgba(245,245,245,1);
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.itembox .item .img .over{
  width:120rpx;
  height:50rpx;
  background:rgba(102,102,102,1);
  border-radius:6rpx;
  font-size:28rpx;
  font-weight:400;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  line-height: 50rpx;
  text-align: center;
  color:#FFFFFF;
}

.itembox .item .intro{
  font-size:26rpx;
  font-weight:500;
  color:rgba(17,17,17,1);
  line-height:40rpx;
  padding: 20rpx 20rpx 0 20rpx;
}
.itembox .item .price{
  font-size:22rpx;
  font-weight:bold;
  color:rgba(255,44,86,1);
  padding:15rpx 20rpx 20rpx 20rpx;
  align-items: center;
  justify-content: space-between;
}
.itembox .item .price .right{
  font-size:22rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}