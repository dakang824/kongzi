.tabbar {
  width: 100%;
  height: 108rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #efefef;
  background-color: #fff;
  z-index: 99;
}

.tabbar.bg {
  background-color: rgba(0, 0, 0, 0.6);
  border-color:#C0C0C0;
  /* background-color:transparent; */
}

.tabbar .tabbar-nav {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

/* .tabbar .tabbar-nav:hover {
  background-color: rgba(255, 255, 255, 0.5);
} */

.tabbar .tabbar-nav .tabbar-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.tabbar .tabbar-nav .tabbar-item .tabbar-item-icon {
  height: 42rpx;
  width: 42rpx;
  margin-top: 13rpx;
  margin-bottom: 12rpx;
}

.tabbar .tabbar-nav .tabbar-item .tabbar-scanit {
  height: 128rpx;
  width: 128rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  background-color: #fff;
  border-top: 1rpx solid #eee;
  border-radius: 50%;
  top: -30rpx;
  box-sizing: border-box;
  z-index: 100;
}

.tabbar .tabbar-nav .tabbar-item .tabbar-scanit image {
  height: 98rpx;
  width: 98rpx;
  margin-top: 10rpx;
}

.tabbar .tabbar-nav .tabbar-item .tabbar-item-icon image {
  height: 52rpx;
  width: 52rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
}

.tabbar .tabbar-nav .tabbar-item .tabbar-item-title {
  color: #666;
  font-size: 24rpx;
  margin-top: 17rpx;
}
